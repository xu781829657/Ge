<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_common_press"
                android:gravity="center_vertical"
                android:orientation="vertical">
    <cn.carbs.android.avatarimageview.library.AvatarImageView
        android:id="@+id/iv_news_type"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginLeft="11dp"
        android:src="@drawable/default_user"
        app:aiv_BoarderColor="#A9D84C"
        app:aiv_BoarderWidth="1dp"
        app:aiv_ShowBoarder="false"
        app:aiv_TextSizeRatio="1" />

    <!--<ImageView-->
        <!--android:id="@+id/iv_news_type"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:layout_marginLeft="11dp"-->
        <!--android:src="@drawable/information_icon"/>-->


    <TextView
        android:id="@+id/tv_news_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/iv_news_type"
        android:ellipsize="end"
        android:paddingLeft="13dp"
        android:singleLine="true"
        android:text="3月光华国际学校课程表，包含语数外.."
        android:textColor="@color/text_black"
        android:textSize="15sp"/>

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="14dp"
        android:background="@color/bg_line"/>


</RelativeLayout>