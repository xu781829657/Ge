<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@color/transparent"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/tv_test_count"
        style="@style/text_12_ff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:drawableLeft="@drawable/task_test_icon"
        android:drawablePadding="8dp"
        android:gravity="center"
        android:text="考试2" />

    <TextView
        android:id="@+id/tv_course_count"
        style="@style/text_12_ff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/tv_test_count"
        android:drawableLeft="@drawable/task_courseware_icon"
        android:drawablePadding="8dp"
        android:gravity="center"
        android:text="课件2" />


    <TextView
        android:id="@+id/tv_survey_count"
        style="@style/text_12_ff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/tv_test_count"
        android:drawableLeft="@drawable/task_questionnaire_icon"
        android:drawablePadding="8dp"
        android:gravity="center"
        android:text="问卷2" />
</RelativeLayout>