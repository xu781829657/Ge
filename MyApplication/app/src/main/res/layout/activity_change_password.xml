<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include
        layout="@layout/common_view_title_bar_personal"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/tiedt_old_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="26dp"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#333333"
            android:background="@color/transparent"
            android:hint="@string/input_hint_old_password"
            android:textColorHint="#bebebe"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="18dp"
            android:background="#dddddd"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/tiedt_new_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxLength="20"
            android:layout_marginLeft="26dp"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:background="@color/transparent"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColor="#333333"
            android:hint="@string/input_hint_new_password"
            android:textColorHint="#bebebe"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="18dp"
            android:background="#dddddd"/>

        <CheckBox
            android:id="@+id/check_show_new_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:checked="false"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:button="@drawable/check_show_password" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/tiedt_new_password_again"
            android:maxLength="20"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="26dp"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:background="@color/transparent"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColor="#333333"
            android:hint="@string/input_hint_new_password_again"
            android:textColorHint="#bebebe"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="18dp"
            android:background="#dddddd"/>

        <CheckBox
            android:id="@+id/check_show_new_pass_again"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:checked="false"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:button="@drawable/check_show_password" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="26dp"
        android:textColor="#9DCF3A"
        android:text="@string/tips_change_password"/>

</LinearLayout>