<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/activity_title_height"
    android:background="@color/title_bar_bg_personal">


    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:background="@drawable/selector_transparent_click_bg"
        android:paddingLeft="23dp"
        android:paddingRight="23dp"
        android:src="@drawable/back2_icon" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@color/title_color_personal"
        android:textSize="@dimen/title_size" />

    <TextView
        android:id="@+id/tv_title_commit"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_marginRight="12dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="@string/commit"
        android:visibility="gone"
        android:textColor="@color/selector_text_balck"
        android:textSize="15sp" />

</RelativeLayout>
