<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:color="#ffffff" android:shape="rectangle">
            <corners android:radius="15dp"></corners>
            <solid android:color="#ffffff" />
            <stroke android:width="1dp" android:color="#BAE860" />
        </shape>

    </item>
    <item>
        <shape android:color="#A8DA47" android:shape="rectangle">
            <corners android:radius="15dp"></corners>
            <solid android:color="#A8DA47" />
            <stroke android:width="1dp" android:color="#BAE860" />
        </shape>
    </item>

</selector>