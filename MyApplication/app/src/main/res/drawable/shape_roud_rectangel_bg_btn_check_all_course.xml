<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:color="@color/transparent_75" android:shape="rectangle">
            <solid android:color="@color/transparent_75" />
            <stroke android:width="3dp" android:color="#ffffff" />
        </shape>

    </item>
    <item>
        <shape android:color="@color/transparent_90" android:shape="rectangle">
            <solid android:color="@color/transparent_90" />
            <stroke android:width="3dp" android:color="#ffffff" />
        </shape>
    </item>

</selector>