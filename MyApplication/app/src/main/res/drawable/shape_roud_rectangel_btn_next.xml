<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:color="@color/btn_next_press" android:shape="rectangle">
            <corners android:radius="5dip" />
            <stroke android:width="0dp" android:color="@color/btn_next_press" />
            <solid android:color="@color/btn_next_press" />
        </shape>
    </item>
    <item>
        <shape android:color="@color/btn_next_normal" android:shape="rectangle">
            <corners android:radius="5dip" />
            <stroke android:width="0dp" android:color="@color/btn_next_normal" />
            <solid android:color="@color/btn_next_normal" />
        </shape>
    </item>

</selector>